<div>
  <h1>LOGIN</h1>

  <div>
    <form style="display: flex; flex-direction: column;" action="/api/v1/session/login" method="POST">


      <label style="margin-top: 5px;" for="usernameEmail">Username or Email</label style="margin-top: 15px;">
      <input style="width: 210px;"
        type="text"
        name="usernameEmail"
        id="usernameEmail"
        placeholder="Enter your username or email"
        required
      />


      <label style="margin-top: 15px;" for="password">Password</label style="margin-top: 15px;">
      <input style="width: 210px;"
        type="password"
        name="password"
        id="password"
        placeholder="Enter your password"
        required
      />

      {{#if wrongCredentials}}
      <p style="color: red; font-size: 15px;">{{wrongCredentials}}</p>
      {{/if}}

      <button style="width: 216px; margin-top: 30px;" type="submit" action="/api/v1/session/register" method="POST">SUBMIT</button>

      <p>Don't have and account? <a href="/api/v1/session/register">Register</a></p>


    </form>
  </div>

</div>